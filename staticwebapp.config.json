{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/aad"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/manifest.json",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/service-worker.js",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/config.xml",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/favicons/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/icons/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/launch-screens/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad"
    }
  }
}
